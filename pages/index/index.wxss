/* 背景图片  */
.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
/* 定位， 位置显示  */
.location-wrapper {
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}
.location {
  display: flex;
  justify-content: center;
  align-items: center;
}
.location-icon {
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}
.location-text {
  opacity: 0.5;
}

.location-tips {
  margin-top: 10rpx;
  text-align: center;
  height: 42rpx;
  opacity: 0.5;
} 

.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}
.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}
.weather-wrapper {
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
  /* background-color: moccasin; */
}

/* 24提示标题  */
.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}
.timetips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
/* 24小时天气内容  */
.forecast-list {
  display: flex;
}
.forecast-item {
  display: flex;
  flex-direction: column;
  /* 缩小比例，默认为1，空间不足是会缩小。如果设置为0，空间不足是不会缩小  */
  flex-shrink: 0; 
  width: 120rpx;
  align-items: center;
}
.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}
.forecast-weather {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
.forecast-temp {
  font-size: 40rpx;
  line-height: 56rpx;
}
/* 今天日期和天气总览  */
.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
.temp-text {
  /* 属性放大比例，默认为0 */
  flex-grow: 1; 
  padding-right: 30rpx;
  text-align: right;
}
.arrow-icon {
  width: 13rpx;
  height: 24rpx;
}

